.header-info
  display: flex
  color: white
  .header-info-box
    cursor: pointer
    background-color: #001529
    margin: 8px
    padding: 10px
    width: 20%   
    white-space: nowrap
    overflow: hidden
    span:first-child
      color: blue
      display: block
      margin-bottom: 5px
    .header-info-content
      display: block
      font-size: 10px
      text-overflow: ellipsis
      overflow: hidden
    .header-info-footer
      display: block
      border-top: 1px solid #3d444c
      padding-top: 6px
      margin-top: 4px
    .ant-progress-text
      color: white !important
.border-line
  width: 50%
  height: 300px
  background-color: #001529
  margin: 8px
  color: white
  overflow: hidden
  padding: 10px
  .video-display
    display: flex
    justify-content: space-around
    .video-scene
      margin: 20px
  .data-list
    .data-list-info
      width: 40%
      display: inline-block
      white-space: nowrap
      overflow: hidden
    p
      border-bottom: 1px solid #3d444c
  .bar-chart
    height: 250px
  .pie-chart
    height: 250px
    
