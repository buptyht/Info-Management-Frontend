.pipa-management
  .ant-form-item
    margin-bottom: 0
  position: relative
  .path-map
    position: absolute
    border: 1px solid rgba(41,118,251,0.3)
    top: 50%
    left: 50%
    transform: translate(-50%,-50%)
    padding: 10px
    background-color: rgba(45,99,241,0.04)
    p
      display: inline
      font-size: 16px
      font-weight: 600
    .path-map-icon
      color: red
      font-size: 20px
      margin-right: 10px
      float: right 
  #routeMap
    border: 1px solid rgba(41,118,251,0.3)
    margin-top: 6px